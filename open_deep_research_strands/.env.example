# Open Deep Research Strands - Environment Configuration

# ===============================
# LLM Provider API Keys
# ===============================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Strands Agents Configuration
STRANDS_AGENTS_API_KEY=your_strands_agents_api_key_here

# ===============================
# Secrets Management
# ===============================
# Password for encrypting stored secrets (optional)
ODR_ENCRYPTION_PASSWORD=your_secure_password_here

# ===============================
# Agent Configuration
# ===============================
# Quality thresholds (0.0 - 1.0)
AGENT_QUALITY_ACCURACY=0.85
AGENT_QUALITY_DEPTH=0.80
AGENT_QUALITY_COMPLETENESS=0.80
AGENT_QUALITY_SOURCE=0.90

# Timeout settings (seconds)
AGENT_TASK_TIMEOUT=300
AGENT_COMM_TIMEOUT=30
AGENT_INIT_TIMEOUT=60

# Retry settings
AGENT_MAX_RETRIES=3
AGENT_BACKOFF_FACTOR=1.5
AGENT_RETRY_DELAY=1.0

# Concurrency limits
AGENT_MAX_SUB_AGENTS=5
AGENT_PARALLEL_TASKS=3

# Memory settings
AGENT_MAX_MEMORY=1000
AGENT_MEMORY_CLEANUP=0.8

# ===============================
# AWS Configuration (for Bedrock integration)
# ===============================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# ===============================
# Application Configuration
# ===============================
LOG_LEVEL=DEBUG
DEBUG_MODE=true
ENVIRONMENT=local

# Enable secure API key storage
SECURE_CREDENTIALS=true

# Rate limiting (requests per minute)
RATE_LIMIT_OPENAI=60
RATE_LIMIT_ANTHROPIC=60

# ===============================
# Development Settings
# ===============================
# Enable mock mode for development
MOCK_MODE=false
STRANDS_LOCAL_MODE=true
STRANDS_MOCK_TOOLS=true

# ===============================
# Optional: Third-party API keys
# ===============================
SERPAPI_KEY=your_serpapi_key_here
BING_SEARCH_API_KEY=your_bing_search_api_key_here