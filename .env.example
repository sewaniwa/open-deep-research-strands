# Environment Variables for Open Deep Research Strands
# Copy this file to .env and update with your actual values
# The .env file should NEVER be committed to version control

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Local LLM settings (for local models)
LOCAL_LLM_ENDPOINT=http://localhost:8000
LOCAL_LLM_MODEL=llama-7b

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/app.log

# Research Configuration
MAX_CONCURRENT_AGENTS=5
RESEARCH_TIMEOUT=10
MAX_RESEARCH_ITERATIONS=3

# Quality Thresholds
QUALITY_THRESHOLD_COMPLETENESS=0.8
QUALITY_THRESHOLD_ACCURACY=0.85
QUALITY_THRESHOLD_DEPTH=0.75

# File Paths
LOCAL_MEMORY_PATH=./open_deep_research_strands/local_memory
LOGS_PATH=./open_deep_research_strands/logs
CACHE_PATH=./open_deep_research_strands/local_memory/cache

# Network Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_RPM=100

# Security Settings
ENABLE_INPUT_VALIDATION=true
ENABLE_OUTPUT_SANITIZATION=true
ENABLE_AUDIT_LOGGING=true

# Development Settings
DEBUG_MODE=true
ENABLE_MOCK_TOOLS=true
SAVE_INTERMEDIATE_RESULTS=true

# Bedrock AgentCore Settings (for future cloud deployment)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# BEDROCK_AGENTCORE_ENDPOINT=your-endpoint

# Optional: Web Search API Keys
GOOGLE_SEARCH_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
BING_SEARCH_API_KEY=your-bing-api-key

# Optional: MCP Server Configuration
MCP_SERVER_ENDPOINT=http://localhost:3000
MCP_SERVER_AUTH_TOKEN=your-mcp-token